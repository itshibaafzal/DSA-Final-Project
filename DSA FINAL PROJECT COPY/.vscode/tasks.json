{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build DSA Project",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-g",
                "Main.cpp",
                "AllocationEngine.cpp",
                "ParkingArea.cpp",
                "ParkingRequest.cpp",
                "ParkingSlot.cpp",
                "ParkingSystem.cpp",
                "RollbackManager.cpp",
                "Zone.cpp",
                "-o",
                "ParkingSystem.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
